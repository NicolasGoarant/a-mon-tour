<div class="titre">
<h2> Les sujets du jour </h2>
</div>

<% @articles.each do |article|  %>
  <% if article.place > 4 %>
      <div class="card-trip">
       <%= cl_image_tag article.photo %>
        <div class="card-trip-infos">
          <a href= <%= newspaper_article_path(article.newspaper, article) %> >
            <div>
              <h2> <%= article.title %> </h2>
              <h4> <%= article.auteur %></h4>
              <p> <%= article.summary %></p>
               <h3><strong> Idée ➔ <%= article.engagement %></strong></h3>
            </div>
          </a>
           <%= cl_image_tag article.media, class: "card-trip-user avatar-bordered" %>
        </div>
      </div>
    <% else %>
       <div class="card-product">
       <%= cl_image_tag article.photo %>
        <div class="card-product-infos">
          <a href= <%= newspaper_article_path(article.newspaper, article) %> >
           <div>
              <h2> <%= article.title %> </h2>
              <p> <%= article.summary %></p>
           </div>
          </a>
        </div>
      </div>
  <% end %>
<% end %>

