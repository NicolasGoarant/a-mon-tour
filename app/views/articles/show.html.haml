.container.col-sm-8.col-centered-md-6.col-centered-lg-6
  .row-fluid
    #article.card-trip
      = cl_image_tag @article.photo
      - if @article.status == "ouvert"
        .boutons_article= link_to "Ajouter à ma bibliothèque", library_path, class: "bouton4"
      - else
        .boutons_article= link_to "Ôter de ma bibliothèque", library_path, class: "bouton4"
      .bloc-auteur
        = cl_image_tag @article.media, class: "media"
      .container
        .row
          .col-12
            %h5.my-2= @article.auteur
          .col-12
            %h5.my-2= @article.publication
          .col-12
            %h2.mt-4= @article.title
          .col-12
            %h3.my-4 Idée ➔ #{@article.engagement}
      .container.pb-5
        = @article.content.try(:html_safe)
        %small.text-muted
          publié le
          = @article.publication
          - if @article.auteur.present?
            par
            = @article.auteur
